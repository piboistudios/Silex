doctype html
html(lang="en", translate="no")
  head
    block head-start

    block head
      title='Silex'
      meta(name='description', content='This is a public instance of Silex website builder. Build websites in the browser')
      link(rel="shortcut icon", href="assets/favicon.png")
      script(src="https://cdn.jsdelivr.net/npm/@yaireo/tagify")
      script(src="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.polyfills.min.js")
      link(href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css")

    block loading
      style.
        body {
          background-color: #444444;
          font-family: "Ubuntu", "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .silex-loader {
          display: none;
        }

    block head-end

  body.silex-loading
    .silex-loader.silex-dialog.
      Loading...

    block includes
      include ./templates/includes.pug

    block body-start
      include ./templates/workspace.pug

    block body-end
      script(src='js/main.js')

    block silex-start
      script.
        silex.start()
        // From here silex.config is available and Silex is getting started
